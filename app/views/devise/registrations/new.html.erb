<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <% if params[:plan] == '2' %>
        <h2 class="text-center">Pro Plan - $10/Month</h2>
      <% else %>
        <h2 class="text-center">Basic Plan - Free</h2>
      <% end %>
      
      <div class="well">
        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>
        
      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>


